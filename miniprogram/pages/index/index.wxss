/* miniprogram/pages/index/index.wxss */
.index-swiper{
  margin: 20rpx;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 90rpx;
}
.index-swiper image{
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}
.index-tab{display: flex;}
.index-tab view{flex: 1;text-align: center;padding: 10rpx;margin: 10rpx;}
.index-tab view.active{border-bottom: 1px solid red;color: red;}

.index-list{display: flex;flex-wrap: wrap;}
.index-list-item{width: 50%;margin: 10rpx 0;}
.index-list-item image{display: block; width: 90%;height: 300rpx;margin: 0 auto;}

.index-list-text{display: flex; justify-content: space-between;width:90%;margin: 0 auto;color: hotpink;}