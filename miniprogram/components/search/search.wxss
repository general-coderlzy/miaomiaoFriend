/* components/search/search.wxss */
.container{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 70rpx;
  z-index: 999;
  overflow: hidden;
}
.containerFocus{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  overflow: hidden;
  background-color: #ccc;
}

.search{
  display: flex;
  align-items: center;
}
.search-text{ 
  display: flex;
  align-items: center;
  flex:1;
  border: 1px #ccc solid;
  border-radius: 10rpx;
  background-color: white;
}
.search-history{
  display: flex;
  justify-content: space-between;
  margin: 20rpx;
  margin-bottom: 30rpx;
}
.search-history-btn text{
  padding:10rpx 20rpx;
  margin:10rpx;
  border: 1px #ccc solid;
  border-radius: 20rpx;
  background-color: white;
}
.searchList-item{
  margin-top: 30rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.searchList-item view{
  display: flex;
  align-items: center;
}
.searchList-item image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
