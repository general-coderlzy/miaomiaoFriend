/* components/removeList/removeList.wxss */
.area{
  width: calc(100% - 40rpx);
  height: 100rpx;
  margin: 20rpx;
  position: relative;
}
.view{
  width: calc(100% - 100rpx);
  height: 100%;
  background-color: white;
  position: absolute;
  left: 100rpx;
  top: 0;
  z-index: 2;
}
image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}
.delete{
  width: 100rpx;
  height: 100rpx;
  background-color: red;
  color: white;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
}